import java.util.*;
class Solution {
    static int maxSubarraySum(int[] arr) {
        // Your code here
        int maxEnding=arr[0];
        int res=arr[0];
        
        for(int i=1;i<arr.length;i++){
            
    //add the next element to current for updating maxEnding maxEnding+arr[i] and
    //if after sum it becomes negating start maxEnding from next element i.e. arr[i]
            maxEnding=Math.max(maxEnding+arr[i] , arr[i]);
            
            res=Math.max(res,maxEnding);
            
        }
        return res;
    }
    
    public static void main(String args[]){
        int[] arr={2,3,-8,7,-1,2,3};
        
        System.out.println(maxSubarraySum(arr));
    }
}
